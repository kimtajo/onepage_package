			    <description xml:lang="ko">갯수를 선택합니다.(기본 4개)</description>
			    <options>
				    <value>4</value>
				    <name xml:lang="ko">4개</name>
			    </options>
			    <options>
				    <value>3</value>
				    <name xml:lang="ko">3개</name>
			    </options>
		    </var>

			<var name="pricing_grade_popular" type="select">
				<name xml:lang="ko">강조 등급 선택 여부</name>
				<description xml:lang="ko">강조 등급을 선택합니다.(기본값: 등급 3)</description>
				<options><value>1</value>
					<name xml:lang="ko">등급 1</name>
				</options>
				<options><value>2</value>
					<name xml:lang="ko">등급 2</name>
				</options>
				<options><value>3</value>
					<name xml:lang="ko">등급 3</name>
