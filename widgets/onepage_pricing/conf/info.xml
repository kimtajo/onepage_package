			</var>
			<var name="use_pricing_grade1_button" type="select">
				<name xml:lang="ko">등급 1 버튼 사용 여부</name>
                <options>
                    <value>Y</value>
                    <name xml:lang="ko">사용함</name>
                </options>
                <options>
                    <value>N</value>
                    <name xml:lang="ko">사용 안함</name>
                </options>
			</var>
			<var name="pricing_grade1_button_name" type="text">
				<name xml:lang="ko">등급 1 버튼 이름</name>
			</var>
			<var name="pricing_grade1_button_link" type="text">
				<name xml:lang="ko">등급 1 링크</name>
			</var>
			<var id="new_window_grade1_button" type="select">
