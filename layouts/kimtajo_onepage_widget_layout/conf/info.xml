                <description xml:lang="ko">포인트가 되는 색상을 선택합니다.</description>
                <options value="default">
                    <title xml:lang="ko">기본</title>
                </options>
                <options value="pink">
                    <title xml:lang="ko">Pink</title>
                </options>
                <options value="blue">
                    <title xml:lang="ko">Blue</title>
                </options>
                <options value="turquoise">
                    <title xml:lang="ko">Turquoise</title>
                </options>
                <options value="orange">
                    <title xml:lang="ko">Orange</title>
                </options>
                <options value="lightblue">
                    <title xml:lang="ko">Light Blue</title>
                </options>
                <options value="brown">
                    <title xml:lang="ko">Brown</title>
                </options>
                <options value="green">
                    <title xml:lang="ko">Green</title>
                </options>
                <options value="custom">
                    <title xml:lang="ko">사용자 지정</title>
                </options>
            </var>
            <var name="custom_color" type="text">
